@model IdleBusiness.Views.Models.BusinessIndexVM

@if (IdleBusiness.Helpers.PurchasableHelper.HasBusinessPurchasedItem(Model.CurrentEntrepreneur.Business.BusinessPurchases, 28))
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Business</th>
                <th scope="col">Investment Amount</th>
            </tr>
        </thead>
        @if (Model.CurrentBusinessInvestments != null)
        {
            <tbody>
                @foreach (var item in Model.CurrentBusinessInvestments)
                {
                    <tr>
                        <td><a asp-controller="Business" asp-action="Index" asp-route-id="@item.Investee.Business.Id">@item.Investee.Business.Name</a></td>
                        <td>
                            <span class="formatted-number" data-number-to-format="@item.Investor.Investment.InvestmentAmount" data-number-format-style="$0a"></span>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
}