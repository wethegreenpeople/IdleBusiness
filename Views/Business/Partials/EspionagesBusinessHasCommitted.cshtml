@model IdleBusiness.Views.Models.BusinessIndexVM

@if (IdleBusiness.Helpers.PurchasableHelper.HasBusinessPurchasedItem(Model.CurrentEntrepreneur.Business.BusinessPurchases, 32))
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Business</th>
            </tr>
        </thead>
        @if (Model.CurrentBusinessEspionages != null)
        {
            <tbody>
                @foreach (var item in Model.CurrentBusinessEspionages)
                {
                    <tr>
                        <td><a asp-controller="Business" asp-action="Index" asp-route-id="@item.BusinessToInvestId">@item.BusinessToInvest.Name</a></td>
                    </tr>
                }
            </tbody>
        }
    </table>
}