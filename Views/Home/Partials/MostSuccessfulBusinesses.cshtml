@model IdleBusiness.Views.Models.HomeIndexVM;

<table id="mostSuccessfulTable" class="table table-bordered table-hover table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Current Cash</td>
            <td>Score</td>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.MostSuccessfulBusinesses.Count; ++i)
        {
            <tr>
                <td>@Model.MostSuccessfulBusinesses[i].Id</td>
                @if (i == 0) { <td><span class="material-icons" style="color: #f9d723">emoji_events</span> @Model.MostSuccessfulBusinesses[i].Name</td> }
                else if (i == 1) { <td><span class="material-icons" style="color: silver">emoji_events</span> @Model.MostSuccessfulBusinesses[i].Name</td> }
                else if (i == 2) { <td><span class="material-icons" style="color: #88750b">emoji_events</span> @Model.MostSuccessfulBusinesses[i].Name</td> }
                else { <td>@Model.MostSuccessfulBusinesses[i].Name</td> }
                <td><span class="formatted-number" data-number-to-format="@Model.MostSuccessfulBusinesses[i].Cash" data-number-format-style="$0a"></span></td>
                <td><span class="formatted-number" data-number-to-format="@Model.MostSuccessfulBusinesses[i].Owner.Score" data-number-format-style="0"></span></td>
            </tr>
        }
    </tbody>
</table>